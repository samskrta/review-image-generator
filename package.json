{
  "name": "review-image-generator",
  "version": "2.0.0",
  "description": "Microservice that turns a review into a social-media-ready PNG image.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node --watch server.js",
    "test": "node --test tests/",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.19.0",
    "puppeteer": "^22.6.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.0"
  },
  "puppeteer": {
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ]
  }
}
